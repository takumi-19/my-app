%body
  .AccountPage.LogIn
    .AccountPage__container
      .AccountPage__title
        %h1 S.S.S.
        %h3 enjoy your soccer life
      .AccountPage__form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .FormFields
            .FormField
              .FormField__input--normal.Email
                = f.email_field :email, autofocus: true, placeholder: "メールアドレス"
            .FormField
              .FormField__input--normal.Password
                = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
            .FormField
              .actions
                = f.submit "ログイン", class: 'Button LoginButton'
          .SignupButton
            %h3 アカウントをお持ちでないですか？
            = render "devise/shared/links"