= render "layouts/header"
.Container
  .Stadium
    %h1.Stadium__text Studium
    .Stadium__lists
      - @stadiums.each do |stadium|
        .Stadium__list
          %h2.Stadium__name 
            = stadium.stadium_name
          - @matches.each do |match|
            - if Time.now < (match.kick_off + 60 * 60 * 2.5) && match.stadium_id == stadium.id && (match.kick_off - 60 * 60 * 2) < Time.now 
              = link_to match_path(match), class: "Stadium__btn" do
                = render 'stadium_btn', stadium: stadium, match: match
              - break
            - elsif Time.now < (match.kick_off + 60 * 60 * 2.5) && match.stadium_id == stadium.id
              = link_to "", class: "Stadium__btn Opacity" do
                = render 'stadium_btn', stadium: stadium, match: match
              - break
= render "layouts/footer"